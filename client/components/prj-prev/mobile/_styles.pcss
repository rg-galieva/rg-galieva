@import "../../../assets/styles/vars.gcss";

.page {
  position: relative;
}

.pic_wrap {
  position: relative;
  margin: 0 auto;
  max-width: 100%;
  text-align: center;

  & > :global(h1) {
    text-transform: uppercase;
    font-size: calc(43rem/var(--f_size));
    margin-top: 1rem;

    & a {
      text-decoration: none;
    }
  }
}

.pic {
  background-color: var(--c_bg);

  & a {
    display: block;
    width: 90%;
    margin: 0 auto;
  }

  & img {
    width: 100%;
  }
}