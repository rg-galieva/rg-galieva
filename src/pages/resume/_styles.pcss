@import "../../assets/styles/vars.gcss";

.wrap {
  & h5 {
    margin-bottom: 0;
  }

  & ul {
    margin-top: 1rem;
  }
}

.skills {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  flex-wrap: wrap;
  justify-content: flex-start;

  & > div {
    flex-basis: calc(250%*100/1000);
    flex-shrink: 1;
    margin-bottom: calc(30rem/var(--f_size));
  }

  & h6 {
    color: var(--c_emph);
    margin-bottom: calc(10rem/var(--f_size));
  }

  & p {
    color: var(--c_sub);
  }
}

.sub {
  margin: calc(30rem/var(--f_size)) 0 calc(10rem/var(--f_size));
}

.company {
  display: flex;
  flex-direction: row;
  align-content: space-between;
  align-items: center;
  margin-bottom: 4rem;

  & :global(figcaption) {
    text-align: center;

    & p {
      font-size: calc(12rem/var(--f_size));
    }
  }

  & a {
    text-decoration: none;
  }
}

.position {
  padding-right: 3rem;
}

.logo_alx {
  text-align: center;

  & svg {
    width: 2.5rem;
    height: 2.5rem;
    margin: 0 auto .3rem;
    fill: var(--c_txt);
  }
}

.logo_mail {
  text-align: center;

  & svg {
    width: calc(100rem/var(--f_size));
    margin: 0 auto .3rem;
    fill: var(--c_txt);
  }
}

.logo_ifree {
  width: 4rem;
  margin: 0 auto;
}

.logo_simai {
  text-align: center;

  & svg {
    width: calc(60rem/var(--f_size));
    margin: 0 auto .3rem;
    fill: var(--c_txt);
  }
}

.edu_row {
  display: flex;
  flex-direction: row;
  align-content: space-between;
  align-items: stretch;
  margin-bottom: 1rem;

  & :global(figcaption) {
    text-align: center;

    & p {
      font-size: calc(12rem/var(--f_size));
    }
  }
}

.edu {
  margin-bottom: 3rem;
}

.logo_usatu {
  width: 3rem;
  margin: 0 auto 1rem;
}

@media (max-width: 700px) {
  .skills {
    & > div {
      flex-basis: calc(100% / 3);
    }
  }

  .company {
    flex-direction: column;

    & :global(.col_3) {
      display: none;
    }
  }

  .edu_row {
    flex-direction: column;

    & :global(.col_4) {
      display: none;
    }
  }
}

@media (max-width: 550px) {
  .skills {
    & > div {
      flex-basis: 50%;
    }
  }
}