:root {
  /* COLORS */
  --c_bg: #222;
  --c_txt: #fff;
  --c_link: #f7f7f7;
  --c_link_vis: #a1a1a1;
  --c_emph: #5fffee;
  --c_thead: rgb(49, 49, 49);
  --c_sub: #efeaea;
  --c_like: #fe536d;
  --c_obj: #b88b58;
  --c_alt: #abc470;
  
  /*  TYPOGRAPHY */
  --f_size: 16;
  --f_regular: 400;
  --f_bold: 700;

  /* GRID */
  --w_max: 1600;

  /* Z-INDEX */
  --z-layout: 100;
  --z-cont: 10;
  --z-bg: 5;
}